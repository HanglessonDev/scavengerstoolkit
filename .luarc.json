{
    "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
    "runtime": {
        "version": "Lua 5.1",
        "pathStrict": false
    },
    "workspace": {
        "library": [
            ".libraries/library/java",
            ".libraries/library/lua",
            ".docs/01_Official",
            ".docs/02_Community_Unofficial"
        ],
        "checkThirdParty": false,
        "ignoreDir": [
            ".git",
            ".vscode",
            "media/lua/shared/!debug",
            "media/lua/client/!debug",
            "media/lua/server/!debug"
        ]
    },
    "diagnostics": {
        "globals": [
            // Mod
            "ISSTKBagAddUpgradeAction",
            "ISSTKBagRemoveUpgradeAction",
            "ISSTKBagUpgradeAction",
            // Project Zomboid
            "STK",
            "Events",
            "getCore",
            "getScriptManager",
            "getPlayer",
            "getSpecificPlayer",
            "getWorld",
            "IsoPlayer",
            "ISTooltipUI",
            "ISInventoryPane",
            "ISHotbar",
            "BodyDamage",
            "SandboxVars",
            "ModData",
            // Timed Actions
            "ISTimedActionQueue",
            "ISBaseTimedAction",
            // Inventory
            "ISInventoryPaneContextMenu",
            "ISContextMenu",
            // Metabolic
            "Metabolics",
            "CharacterActionAnims"
        ]
    },
    "hint": {
        "enable": true,
        "arrayIndex": "Enable"
    },
    "completion": {
        "callSnippet": "Replace"
    }
}